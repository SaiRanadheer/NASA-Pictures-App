<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen5dp"
    android:layout_marginTop="@dimen/dimen7dp"
    android:layout_marginEnd="@dimen/dimen5dp"
    android:layout_marginBottom="@dimen/dimen7dp"
    app:cardBackgroundColor="#F6FEFF"
    app:cardCornerRadius="@dimen/dimen8dp"
    app:cardElevation="@dimen/dimen4dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gridImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen225dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="#F6FEFF"
        android:maxHeight="@dimen/dimen450dp"
        android:scaleType="fitCenter"
        android:visibility="visible" />
</androidx.cardview.widget.CardView>